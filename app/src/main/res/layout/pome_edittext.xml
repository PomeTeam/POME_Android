<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pome_edittext_container_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            style="@style/Pome.Regular.14"
            android:id="@+id/pome_content_aet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey0_r6_background"
            tools:text="40,000"
            android:textColor="@color/grey_8"
            android:lines="6"
            android:gravity="start"
            android:maxLength="150"
            android:paddingHorizontal="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="44dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/Pome.Regular.14"
            android:id="@+id/pome_char_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00/150"
            android:textColor="@color/grey_ad"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toBottomOf="@id/pome_content_aet"
            app:layout_constraintEnd_toEndOf="@id/pome_content_aet" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>