<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/add_friends_notice_title_tv"
            style="@style/Pome.Bold.22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            android:text="@string/add_friends_notice_title_text"
            android:textColor="@color/grey_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_friends_notice_desc_tv"
            style="@style/Pome.Medium.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/add_friends_notice_desc_text"
            android:textColor="@color/grey_5"
            app:layout_constraintStart_toStartOf="@id/add_friends_notice_title_tv"
            app:layout_constraintTop_toBottomOf="@id/add_friends_notice_title_tv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/add_friends_notice_3d_component_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/friend_3d_component"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_friends_notice_desc_tv"
            app:layout_constraintBottom_toTopOf="@id/add_friends_notice_check_false_atv"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/add_friends_notice_check_false_atv"
            style="@style/Pome.Bold.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="@string/add_friends_notice_check_false_text"
            android:textColor="@color/grey_4"
            app:layout_constraintBottom_toTopOf="@id/add_friends_notice_check_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_friends_notice_check_btn"
            style="@style/Pome.Bold.18"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/register_profile_name_check_available_btn_background"
            android:stateListAnimator="@null"
            android:text="@string/register_profile_name_button_text"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>