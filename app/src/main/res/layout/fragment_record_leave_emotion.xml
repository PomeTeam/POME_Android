<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/record_leave_emotion_back_button_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_24"
            android:contentDescription="@string/back_button_text"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_back_button_iv"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/record_leave_emotion_pen_iv"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/pen_mint"
                    android:contentDescription="@string/record_leave_emotion_pen_desc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    style="@style/Pome.SemiBold.16"
                    android:id="@+id/record_leave_emotion_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_leave_emotion_title_text"
                    android:textColor="@color/grey_8"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_pen_iv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    style="@style/Pome.Medium.14"
                    android:id="@+id/record_leave_emotion_subtitle_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_leave_emotion_subtitle_text"
                    android:textColor="@color/grey_6"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/record_leave_emotion_goal_card_cv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="16dp"
                    app:cardCornerRadius="6dp"
                    app:strokeColor="@color/grey_2"
                    app:strokeWidth="1dp"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_subtitle_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/record_leave_emotion_goal_card_container_cl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="14dp">

                        <TextView
                            style="@style/Pome.SemiBold.10"
                            android:id="@+id/record_leave_emotion_public_chip_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_5"
                            tools:text="공개"
                            android:text="공개"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="6dp"
                            android:background="@drawable/item_grey1_r4_background"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            style="@style/Pome.SemiBold.10"
                            android:id="@+id/record_leave_emotion_day_chip_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pink_100"
                            tools:text="END"
                            android:text="END"
                            android:layout_marginStart="4dp"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="6dp"
                            android:background="@drawable/item_pink10_r4_background"
                            app:layout_constraintTop_toTopOf="@id/record_leave_emotion_public_chip_tv"
                            app:layout_constraintStart_toEndOf="@id/record_leave_emotion_public_chip_tv"
                            app:layout_constraintBottom_toBottomOf="@id/record_leave_emotion_public_chip_tv"/>

                        <TextView
                            style="@style/Pome.SemiBold.18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            tools:text="커피 대신 물을 마시자"
                            android:text="커피 대신 물을 마시자"
                            android:textColor="@color/grey_8"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_public_chip_tv"
                            app:layout_constraintStart_toStartOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    style="@style/Pome.Medium.14"
                    android:id="@+id/record_leave_emotion_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="전체 0건"
                    android:text="전체 0건"
                    android:textColor="@color/grey_5"
                    android:letterSpacing="-0.03"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_goal_card_cv"
                    app:layout_constraintStart_toStartOf="@id/record_leave_emotion_goal_card_cv"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/record_leave_emotion_no_emotion_container_cl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_count_tv"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/record_leave_emotion_no_write_emotion_aiv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/more_circle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/record_no_write_emotion_text"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="30dp"
                        app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_no_write_emotion_aiv"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@id/record_leave_emotion_no_write_emotion_aiv"
                        app:layout_constraintEnd_toEndOf="@id/record_leave_emotion_no_write_emotion_aiv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/record_leave_emotion_rv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_record_emotion_card"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="16dp"
                    app:layout_constraintTop_toBottomOf="@id/record_leave_emotion_goal_card_cv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>