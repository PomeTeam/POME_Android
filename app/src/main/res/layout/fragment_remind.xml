<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_0">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/remind_notice_bell_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="23dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/remind_notice_alarm_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_alarm"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-3.5dp"
            app:layout_constraintTop_toTopOf="@id/remind_notice_bell_aiv"
            app:layout_constraintEnd_toEndOf="@id/remind_notice_bell_aiv"/>

        <TextView
            android:id="@+id/remind_no_chip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏤"
            android:textColor="@color/white"
            android:paddingHorizontal="22dp"
            android:paddingVertical="5dp"
            android:background="@drawable/remind_chip_background"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/remind_notice_bell_aiv"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remind_yes_chip_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/remind_notice_bell_aiv"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Todo : ViewPager로 목표가 있는 경우 설정 -->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/remind_goal_card_cv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="3dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingTop="15dp"
            app:contentPaddingBottom="15dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/remind_no_chip_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/remind_goal_content_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UseCompoundDrawables">

                <!-- Todo : databinding 이용해서 동적으로 데이터 변경 처리 -->

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/ic_empty_goal"/>

                <TextView
                    style="@style/Pome.Bold.16"
                    android:id="@+id/remind_no_goal_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_5"
                    android:text="@string/remind_goal_card_no_text"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Pome.Bold.18"
            android:id="@+id/remind_review_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remind_review_title_text"
            android:textColor="@color/grey_9"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@id/remind_goal_card_cv"
            app:layout_constraintStart_toStartOf="@id/remind_goal_card_cv" />

        <!-- Todo: Spinner item 연결하기 (Adapter) -->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/remind_review_first_emotion_acs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="13dp"
            tools:listitem="@layout/emotion_spinner_item"
            android:background="@drawable/emotion_selector"
            app:layout_constraintTop_toBottomOf="@id/remind_review_title_tv"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/remind_review_last_emotion_acs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_marginStart="6dp"
            tools:listitem="@layout/emotion_spinner_item"
            android:background="@drawable/emotion_selector"
            app:layout_constraintTop_toBottomOf="@id/remind_review_title_tv"
            app:layout_constraintStart_toEndOf="@id/remind_review_first_emotion_acs" />

        <TextView
            android:id="@+id/remind_review_initial_tv"
            style="@style/Pome.SemiBold.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_5"
            android:text="@string/remind_review_initial_text"
            android:layout_marginEnd="3dp"
            app:layout_constraintTop_toTopOf="@id/remind_review_first_emotion_acs"
            app:layout_constraintBottom_toBottomOf="@id/remind_review_first_emotion_acs"
            app:layout_constraintEnd_toStartOf="@id/remind_review_initial_aiv" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/remind_review_initial_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_initial"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toTopOf="@id/remind_review_first_emotion_acs"
            app:layout_constraintBottom_toBottomOf="@id/remind_review_first_emotion_acs"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/remind_no_review_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/remind_review_first_emotion_acs"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/remind_no_review_aiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_circle"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/Pome.SemiBold.14"
                android:id="@+id/remind_no_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remind_no_review_text"
                android:textColor="@color/grey_5"
                android:layout_marginTop="7dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>