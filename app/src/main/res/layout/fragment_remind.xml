<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="remindTestItem"
            type="com.teampome.pome.model.RemindTestItem" />

        <variable
            name="firstEmotion"
            type="com.teampome.pome.viewmodel.Emotion" />

        <variable
            name="lastEmotion"
            type="com.teampome.pome.viewmodel.Emotion" />

        <import type="android.view.View" />
        <import type="com.teampome.pome.viewmodel.Emotion" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_0">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/remind_notice_bell_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/remind_notice_alarm_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_alarm"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-3.5dp"
            app:layout_constraintTop_toTopOf="@id/remind_notice_bell_aiv"
            app:layout_constraintEnd_toEndOf="@id/remind_notice_bell_aiv"/>

<!--        <TextView-->
<!--            android:id="@+id/remind_no_chip_tv"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="···"-->
<!--            android:textColor="@color/white"-->
<!--            android:paddingHorizontal="12dp"-->
<!--            android:paddingVertical="5dp"-->
<!--            android:background="@drawable/remind_chip_background"-->
<!--            android:layout_marginStart="16dp"-->
<!--            android:layout_marginTop="22dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/remind_notice_bell_aiv"-->
<!--            app:layout_constraintStart_toStartOf="parent" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/remind_category_chip_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:layout_marginHorizontal="16dp"
            tools:listitem="@layout/item_remind_category_chip"
            app:layout_constraintTop_toBottomOf="@id/remind_notice_bell_aiv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remind_yes_chip_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/remind_notice_bell_aiv"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Todo : ViewPager로 목표가 있는 경우 설정 -->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/remind_goal_card_cv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardBackgroundColor="@color/white"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="3dp"
            app:contentPaddingLeft="16dp"
            app:contentPaddingTop="14dp"
            app:contentPaddingBottom="14dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/remind_category_chip_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/remind_goal_content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Todo : databinding 이용해서 동적으로 데이터 변경 처리 -->

                <TextView
                    style="@style/Pome.SemiBold.10"
                    android:id="@+id/remind_goal_card_public_chip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_5"
                    tools:text="공개"
                    android:text="@{remindTestItem.goalCardItem.categories[0]}"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:background="@drawable/item_grey1_r4_background"
                    android:visibility="@{remindTestItem.goalCardItem.goal == null ? View.GONE : View.VISIBLE}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    style="@style/Pome.SemiBold.10"
                    android:id="@+id/remind_goal_card_day_chip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink_100"
                    tools:text="D-12"
                    android:text="@{remindTestItem.goalCardItem.categories[1]}"
                    android:layout_marginStart="4dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:visibility="@{remindTestItem.goalCardItem.goal == null ? View.GONE : View.VISIBLE}"
                    android:background="@drawable/item_pink10_r4_background"
                    app:layout_constraintTop_toTopOf="@id/remind_goal_card_public_chip_tv"
                    app:layout_constraintStart_toEndOf="@id/remind_goal_card_public_chip_tv"
                    app:layout_constraintBottom_toBottomOf="@id/remind_goal_card_public_chip_tv"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/remind_goal_card_empty_aiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{remindTestItem.goalCardItem.goal == null ? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/remind_goal_card_tv"
                    app:layout_constraintBottom_toBottomOf="@id/remind_goal_card_tv"
                    android:src="@drawable/ic_empty_goal"/>

                <TextView
                    style="@style/Pome.Bold.16"
                    android:id="@+id/remind_goal_card_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@{remindTestItem.goalCardItem.goal == null ? @color/grey_5 : @color/grey_8}"
                    android:text="@{remindTestItem.goalCardItem.goal ?? @string/remind_goal_card_no_text}"
                    tools:text="@string/remind_goal_card_no_text"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/remind_goal_card_empty_aiv"
                    app:layout_constraintTop_toBottomOf="@id/remind_goal_card_public_chip_tv" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Pome.Bold.18"
            android:id="@+id/remind_review_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remind_review_title_text"
            android:textColor="@color/grey_9"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/remind_goal_card_cv"
            app:layout_constraintStart_toStartOf="@id/remind_goal_card_cv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remind_review_first_emotion_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:background="@{firstEmotion == Emotion.FIRST_EMOTION ? @drawable/no_emotion_spinner_background : @drawable/emotion_spinner_background}"
            app:layout_constraintTop_toBottomOf="@id/remind_review_title_tv"
            app:layout_constraintStart_toStartOf="parent" >

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Pome.SemiBold.14"
                android:id="@+id/remind_review_first_emotion_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remind_review_first_emotion_text"
                bind:remindEmotionText="@{firstEmotion}"
                android:textColor="@{firstEmotion == Emotion.FIRST_EMOTION ? @color/grey_5 : @color/pink_100}"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="11dp"
                android:tint="@{firstEmotion == Emotion.FIRST_EMOTION ? @color/grey_5 : @color/pink_100}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/remind_review_first_emotion_atv"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remind_review_last_emotion_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:background="@{lastEmotion == Emotion.LAST_EMOTION ? @drawable/no_emotion_spinner_background : @drawable/emotion_spinner_background}"
            app:layout_constraintTop_toBottomOf="@id/remind_review_title_tv"
            app:layout_constraintStart_toEndOf="@id/remind_review_first_emotion_cl" >

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Pome.SemiBold.14"
                android:id="@+id/remind_review_last_emotion_atv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remind_review_last_emotion_text"
                bind:remindEmotionText="@{lastEmotion}"
                android:textColor="@{lastEmotion == Emotion.LAST_EMOTION ? @color/grey_5 : @color/pink_100}"
                android:paddingStart="8dp"
                android:paddingEnd="0dp"
                android:paddingVertical="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="11dp"
                android:tint="@{lastEmotion == Emotion.LAST_EMOTION ? @color/grey_5 : @color/pink_100}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/remind_review_last_emotion_atv"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/remind_review_reset_containter_cl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:layout_constraintTop_toTopOf="@id/remind_review_first_emotion_cl"
            app:layout_constraintBottom_toBottomOf="@id/remind_review_first_emotion_cl"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/remind_review_reset_tv"
                style="@style/Pome.SemiBold.14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_5"
                android:text="@string/remind_review_initial_text"
                android:layout_marginEnd="3dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/remind_review_reset_aiv"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/remind_review_reset_aiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_initial"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/remind_no_review_ll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/remind_review_first_emotion_cl"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/remind_no_review_aiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/more_circle"
                android:layout_marginBottom="7dp"/>

            <TextView
                style="@style/Pome.SemiBold.14"
                android:id="@+id/remind_no_review_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remind_no_review_text"
                android:textColor="@color/grey_5"
                android:layout_marginTop="7dp"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>