<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notice_dialog_container_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notice_close_button_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_cancel_24_grey4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notice_image_aiv"
            android:layout_width="110dp"
            android:layout_height="110dp"
            tools:src="@drawable/trash_green"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Pome.SemiBold.16"
            android:id="@+id/notice_title_atv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingHorizontal="2dp"
            tools:text="지금은 씀씀이를 기록할 수 없어요"
            android:textColor="@color/grey_8"
            android:lineSpacingExtra="3sp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/notice_image_aiv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/Pome.Medium.14"
            android:id="@+id/notice_subtitle_atv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="나만의 소비 목표를 설정하고\n기록을 시작해보세요!"
            android:textColor="@color/grey_5"
            android:paddingHorizontal="25dp"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="19dp"
            app:layout_constraintTop_toBottomOf="@id/notice_title_atv"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>