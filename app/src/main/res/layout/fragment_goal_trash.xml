<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

    </data>

    <!-- Todo : 그림자 처리 -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="2dp"
        android:shadowDy="2"
        android:layout_marginHorizontal="36dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/goal_trash_goal_trash_tv"
                android:text="@string/goal_trash_text"
                style="@style/Pome.SemiBold.16"
                android:textColor="@color/grey_9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"/>

            <TextView
                android:id="@+id/goal_trash_goal_all_trash_tv"
                android:text="@string/goal_trash_all_text"
                style="@style/Pome.Medium.14"
                android:textColor="@color/grey_5"
                app:layout_constraintTop_toBottomOf="@+id/goal_trash_goal_trash_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                />

            <ImageView
                android:id="@+id/goal_trash_goal_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trash_green_iv"
                app:layout_constraintTop_toBottomOf="@+id/goal_trash_goal_all_trash_tv"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                />

            <TextView
                android:id="@+id/goal_trash_goal_all_okay_trash_tv"
                android:text="@string/goal_trash_all_okay_text"
                style="@style/Pome.Medium.14"
                android:textColor="@color/main"
                app:layout_constraintTop_toBottomOf="@+id/goal_trash_goal_iv"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:paddingBottom="20dp"
                />

            <TextView
                android:id="@+id/goal_trash_goal_all_not_trash_tv"
                android:text="@string/goal_trash_all_not_text"
                style="@style/Pome.Medium.14"
                android:textColor="@color/main"
                app:layout_constraintTop_toBottomOf="@+id/goal_trash_goal_iv"
                app:layout_constraintRight_toLeftOf="@id/goal_trash_goal_all_okay_trash_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp"
                android:paddingBottom="20dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>