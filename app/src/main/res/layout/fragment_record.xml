<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_0">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/record_notice_bell_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bell"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/record_notice_alarm_aiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/green_alarm"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="-3.5dp"
            app:layout_constraintTop_toTopOf="@id/record_notice_bell_aiv"
            app:layout_constraintEnd_toEndOf="@id/record_notice_bell_aiv"/>

        <TextView
            android:id="@+id/record_category_plus_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@drawable/record_category_plus_background"
            android:textColor="@color/white"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@id/record_notice_bell_aiv"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/record_category_chips_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:paddingEnd="16dp"
            android:paddingStart="8dp"
            tools:listitem="@layout/item_record_category_chip"
            app:layout_constraintTop_toTopOf="@id/record_category_plus_tv"
            app:layout_constraintStart_toEndOf="@id/record_category_plus_tv"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/record_goal_card_cv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            android:layout_marginTop="18dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/record_category_chips_rv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/record_no_goal_card_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="33dp"
                android:paddingHorizontal="20dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/record_no_goal_marshmellow_aiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/marshmallow_level_4_mint"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/record_no_goal_text_container_cl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/record_no_goal_marshmellow_aiv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/record_no_goal_marshmellow_aiv"
                    app:layout_constraintBottom_toBottomOf="@id/record_no_goal_marshmellow_aiv">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Pome.SemiBold.16"
                        android:id="@+id/record_no_goal_title_atv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/record_no_goal_title_text"
                        android:lineSpacingExtra="3sp"
                        android:textColor="@color/grey_8"
                        android:paddingHorizontal="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Pome.Medium.14"
                        android:id="@+id/record_no_goal_subtitle_atv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/record_no_goal_subtitle_text"
                        android:textColor="@color/main"
                        android:paddingStart="20dp"
                        android:paddingEnd="0dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/record_no_goal_title_atv"
                        app:layout_constraintStart_toStartOf="@id/record_no_goal_title_atv"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_right_24"
                        app:layout_constraintTop_toTopOf="@id/record_no_goal_subtitle_atv"
                        app:layout_constraintBottom_toBottomOf="@id/record_no_goal_subtitle_atv"
                        app:layout_constraintStart_toEndOf="@id/record_no_goal_subtitle_atv"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/record_goal_card_cl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingVertical="14dp">

                <TextView
                    style="@style/Pome.SemiBold.10"
                    android:id="@+id/record_goal_card_public_chip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_5"
                    android:text="비공개"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:layout_marginStart="16dp"
                    android:background="@drawable/item_grey1_r4_background"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    style="@style/Pome.SemiBold.10"
                    android:id="@+id/record_goal_card_day_chip_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink_100"
                    tools:text="END"
                    android:text="END"
                    android:layout_marginStart="4dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:background="@drawable/item_pink10_r4_background"
                    app:layout_constraintTop_toTopOf="@id/record_goal_card_public_chip_tv"
                    app:layout_constraintStart_toEndOf="@id/record_goal_card_public_chip_tv"
                    app:layout_constraintBottom_toBottomOf="@id/record_goal_card_public_chip_tv"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/record_goal_more_aiv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_more_vertical_24"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Pome.SemiBold.18"
                    android:id="@+id/record_goal_title_atv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:lineSpacingExtra="6sp"
                    android:textColor="@color/grey_8"
                    android:text="커피 대신 물을 마시자"
                    android:paddingHorizontal="0dp"
                    android:layout_marginTop="6dp"
                    app:layout_constraintTop_toBottomOf="@id/record_goal_card_public_chip_tv"
                    app:layout_constraintStart_toStartOf="@id/record_goal_card_public_chip_tv"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Pome.SemiBold.12"
                    android:id="@+id/record_goal_used_amount_title_atv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/record_goal_used_amount_title_text"
                    android:textColor="@color/grey_5"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/record_goal_title_atv"
                    app:layout_constraintStart_toStartOf="@id/record_goal_title_atv"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Pome.SemiBold.16"
                    android:id="@+id/record_goal_used_amount_atv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30,000원"
                    android:textColor="@color/grey_7"
                    android:lineSpacingExtra="3sp"
                    app:layout_constraintTop_toBottomOf="@id/record_goal_used_amount_title_atv"
                    app:layout_constraintStart_toStartOf="@id/record_goal_used_amount_title_atv"/>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Pome.SemiBold.16"
                    android:id="@+id/record_goal_amount_atv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="· 100,000원"
                    android:textColor="@color/grey_5"
                    android:layout_marginStart="4dp"
                    app:layout_constraintTop_toTopOf="@id/record_goal_used_amount_atv"
                    app:layout_constraintBottom_toBottomOf="@id/record_goal_used_amount_atv"
                    app:layout_constraintStart_toEndOf="@id/record_goal_used_amount_atv"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:progress="30"
                    android:thumb="@drawable/pome_seekbar_custom_thumb"
                    android:progressDrawable="@drawable/pome_seekbar_custom"
                    android:layout_marginTop="8dp"
                    android:clickable="false"
                    android:focusableInTouchMode="false"
                    app:layout_constraintTop_toBottomOf="@id/record_goal_amount_atv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>